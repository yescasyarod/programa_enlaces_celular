{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",

    { "identifier": "fs:scope", "allow": [{ "path": "$APPLOCALDATA/*" }] },
    { "identifier": "fs:allow-applocaldata-write-recursive", "allow": [{ "path": "$APPLOCALDATA/*" }] },
    { "identifier": "fs:allow-mkdir", "allow": [{ "path": "$APPLOCALDATA/*" }] },
    { "identifier": "fs:allow-applocaldata-read-recursive", "allow": [{ "path": "$APPLOCALDATA/*" }] },
    { "identifier": "fs:allow-read-dir", "allow": [{ "path": "$APPLOCALDATA/*" }] },

    "sql:default",
    "sql:allow-execute",
    "websocket:default",
    "dialog:default",
    "fs:default"
  ]
}
